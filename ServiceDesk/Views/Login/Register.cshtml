@model Usuario
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{

    <div>
        @Html.LabelFor(m => m.Id)
        @Html.TextBoxFor(m => m.Id, new { required = true })
    </div>

    <div>
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { required = true })
    </div>

    <div>
        @Html.LabelFor(m => m.Apellido)
        @Html.TextBoxFor(m => m.Apellido, new { required = true })
    </div>
    <div>
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { required = true })
    </div>
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { required = true })
    </div>
    <div>
        @Html.LabelFor(m => m.Telefono)
        @Html.TextBoxFor(m => m.Telefono, new { required = true })
    </div>
    <button type="submit">Register</button>
}

